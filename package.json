{
  "name": "update-leiningen-dependencies",
  "version": "0.1.0",
  "author": "jim@atomist.com",
  "description": "use this to pull in a skill's npm dependencies",
  "scripts": {
    "build:watch": "shadow-cljs watch dev",
    "build": "shadow-cljs release release",
    "bundle": "bundle",
    "test": "shadow-cljs compile test",
    "skill": "npm run build && npm run bundle",
    "atm:lint:prettier": "prettier --write"
  },
  "dependencies": {
    "@atomist/api-cljs": "^0.4.46"
  },
  "devDependencies": {
    "@atomist/skill-bundler": "^0.1.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.1.1",
    "shadow-cljs": "^2.8.69",
    "source-map-support": "0.5.9",
    "ws": "^7.3.0"
  },
  "main": "node_modules/@atomist/api-cljs/app.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.@(graphql|json|markdown|yaml|yml|md)": "npm run atm:lint:prettier"
  }
}
